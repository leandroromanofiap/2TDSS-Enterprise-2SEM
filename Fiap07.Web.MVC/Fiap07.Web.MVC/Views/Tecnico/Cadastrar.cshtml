@model Fiap07.Web.MVC.Models.Tecnico
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Técnico</h2>

@if(TempData["msg"] != null)
{
    <div class="alert alert-success">
        <p>@TempData["msg"]</p>
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Nome)
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Salario)
        @Html.TextBoxFor(x => x.Salario, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Cadastrar Técnico" />
}